[MASTER]
ignore=CVS,examples,tests
ignore-patterns=
persistent=yes
load-plugins=

[MESSAGES CONTROL]
disable=
    unnecessary-pass,
    import-outside-toplevel,
    no-else-return,
    too-many-locals,
    too-many-statements,
    too-many-arguments,
    missing-module-docstring,
    missing-function-docstring,
    too-few-public-methods,
    undefined-variable,
    arguments-differ,
    unexpected-keyword-arg,
    no-value-for-parameter,
    unused-argument,
    wrong-import-order,
    ungrouped-imports,
    line-too-long,
    unused-import,
    reimported,
    redefined-outer-name,
    fixme,
    broad-exception-caught,
    consider-using-in

[REPORTS]
output-format=text
reports=yes
evaluation=10.0 - ((float(5 * error + warning + refactor + convention) / statement) * 10)

[SIMILARITIES]
min-similarity-lines=8
ignore-comments=yes
ignore-docstrings=yes
ignore-imports=no

[TYPECHECK]
ignore-mixin-members=yes
ignored-classes=optparse.Values,thread._local,_thread._local,numpy,numpy.ndarray,qiskit

[FORMAT]
max-line-length=100
single-line-if-stmt=yes

[BASIC]
good-names=i,j,k,ex,Run,_

[DESIGN]
max-args=15
max-locals=25
max-returns=11
max-attributes=25
min-public-methods=0
max-public-methods=25
max-branches=16
max-nested-blocks=6
max-module-lines=1200 